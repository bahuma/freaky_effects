{
  "manifest_version": 2,

  "name": "Freaky Effects",
  "description": "Add Freaky Effects to Websites",
  "version": "1.5",
  
  "icons": { 
	"16": "images/app_icon_16.png",
    "48": "images/app_icon_48.png",
	"128": "images/app_icon_128.png"
  },

  "permissions": [
    "<all_urls>",
	"activeTab"
  ],
  
  "browser_action": {
    "default_icon": {
      "19": "images/app_icon_19.png",
      "38": "images/app_icon_38.png"
    },
	"default_popup": "popup.html"
  },
  
  "background" : {
    "scripts" : ["background.js"]
  }
}